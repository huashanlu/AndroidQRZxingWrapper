<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hisun.qrdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hisun.qrdemo.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hisun.qrdemo.EncoderQRActivity" >
        </activity>
        <activity android:name="com.hisun.qrdemo.DecoderQRActivity" >
        </activity>
        <activity android:name="com.hisun.qrdemo.DecoderFromBitmapActivity" >
        </activity>
        <activity android:name="com.hisun.qrdemo.LocationActivity" >
        </activity>
    </application>

</manifest>